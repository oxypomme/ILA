{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ILA",
	"patterns": [
		{
			"include": "#keywords"
		},
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    }
	],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ila",
          "match": "\\b(si|sinon|sinonsi|alors|fsi|tant_que|ftq|pour|a|fpour|faire)\\b"
        },
        {
          "match": "\\b(entier|reel|booleen|chaine|const|e|s)\\b",
          "name": "keyword.type.ila"
        },
        {
          "match": "\\b(algo|fonction|module)\\b",
          "name": "keyword.other.class.ila"
        },
        {
          "match": "[0-9]+(\\.[0-9]+)?",
          "name": "keyword.other.unit.hexadecimal.ila"
        },
        {
          "match": "\\b(Vrai|Faux)\\b",
          "name": "keyword.other.unit.ila"
        },
        {
          "match": "\\b(mod|div|et|ou|non)\\b", // (<-|\\*|/|<|<=|>|>=|=|!=|\\+|-)
          "name": "keyword.other.template.ila"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.ila",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.ila",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.typehint.ignore.ila",
          "begin": "//",
          "end": "\n"
        },
        {
          "name": "comment.typehint.ignore.ila",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    }
  },
	"scopeName": "source.ila"
}