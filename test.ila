//ici on déclare les variables de l'algo
nombre:entier // Nombre à traiter
resultat:entier // Carré calculé
pi:const réel <- 3.141592 //une constante
tableau[taille]:entier //tableau d'entiers

//Un seul algo par fichier !
algo Carre{
    lire(nombre)
    resultat <- fnc_carre(nombre)
    modu_resultat(resultat, message)
    ecrire(message)
}

fonction fnc_carre(nombre:entier):entier{
    fnc_carre <- nombre * nombre
}

// pourquoi pas e:resultat:enter et s:message:chaine ? et es:variable:enter pour entrée/sortie ?
module modu_resultat(↓resultat:entier, ↑message:chaine){
    ecrire(resultat)
    message <- "yay"
}

//structure ou struct ?
structure personne{
    nom:chaine
    age:entier
}

