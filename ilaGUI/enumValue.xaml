<UserControl x:Class="ilaGUI.enumValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ilaGUI"
             mc:Ignorable="d"
             d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="valueName" Foreground="White" Background="{x:Null}" CaretBrush="White" Margin="0,0,20,0" />
        <Button x:Name="removeBtn" HorizontalAlignment="Right" Click="removeBtn_Click">
            <Image Stretch="None" Source="icons/png/remove.png" />
        </Button>
    </Grid>
</UserControl>