<Window x:Class="ilaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:ilaGUI"
        xmlns:local="clr-namespace:ilaGUI"
        mc:Ignorable="d"
        Title="ILA" Height="700" Width="1200" Background="#FF2D2A2E">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" MinWidth="100" MaxWidth="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ToolBarTray VerticalAlignment="Top" Grid.ColumnSpan="2" Background="{x:Null}">
            <ToolBar VerticalAlignment="Center" Background="#FF403E41" Foreground="{x:Null}" Margin="0,0,-1200,0">
                <Button x:Name="newBtn" Content="Button" HorizontalAlignment="Left" Width="16" Height="16" Foreground="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/icons/NewFile_16x.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="openBtn" Width="16" Height="16" Foreground="{x:Null}" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/icons/OpenFile_16x.png" Stretch="Fill" TileMode="None" />
                    </Button.Background>
                </Button>
                <Button x:Name="saveBtn" Content="Button" Width="16" Height="16" Foreground="{x:Null}" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/icons/save_16x.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="runBtn" Content="Button" Width="16" Height="16" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/icons/Run_16x.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="buildBtn" Content="Button" Width="16" Height="16" Foreground="{x:Null}" BorderBrush="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/icons/BuildSolution_16x.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="wikiBtn" Content="Button" Width="16" Height="16" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Button.Background>
                        <ImageBrush ImageSource="/icons/StatusHelp_16x.png" />
                    </Button.Background>
                </Button>

                <ToolBar.Resources>
                    <Style x:Key="ToolBarMainPanelBorderStyle" TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="0,0,0,0" />
                    </Style>
                </ToolBar.Resources>
            </ToolBar>
        </ToolBarTray>
        <Grid x:Name="arboGrid" Margin="0,21,0,0" />
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Width="12" Background="#FF403E41" Margin="0,21,0,0" />
        <Grid Grid.Column="1" Margin="0,21,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="150" MinHeight="100" MaxHeight="250" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid x:Name="codeGrid" Margin="10,0,262,0" />
                <GridSplitter Grid.Column="0" Width="12" Background="#FF403E41" HorizontalAlignment="Left" Margin="788,0,0,0" />
                <Grid x:Name="lexiqGrid" Margin="800,0,0,0" />
            </Grid>
            <GridSplitter Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="12" Background="#FF403E41" />
            <Grid x:Name="consoleGrid" Grid.Row="0" Margin="12,513,0,0" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="250" MinWidth="150" MaxWidth="350" />
                </Grid.ColumnDefinitions>
                <TabControl Grid.ColumnSpan="2" Background="{x:Null}" BorderBrush="{x:Null}">
                    <TabItem Header="TabItem" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Grid />
                    </TabItem>
                    <TabItem Header="TabItem" Background="{x:Null}" BorderBrush="{x:Null}">
                        <Grid />
                    </TabItem>
                </TabControl>
                <ToolBar Margin="110,0,0,126" Grid.ColumnSpan="2" Background="{x:Null}" />
            </Grid>
        </Grid>
    </Grid>
</Window>