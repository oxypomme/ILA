<UserControl x:Class="ilaGUI.Console"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ilaGUI"
             mc:Ignorable="d"
             d:DesignWidth="1050" d:DesignHeight="200">
    <Grid Margin="10,0,10,0">
        <TextBlock Name="outputTB" TextWrapping="Wrap" />
        <Grid Height="20" VerticalAlignment="Bottom">
            <TextBox x:Name="inputTB" Text="&gt; " KeyDown="inputTB_KeyDown" />
        </Grid>
    </Grid>
</UserControl>