<UserControl x:Class="ilaGUI.Classes.Assign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ilaGUI.Classes"
             mc:Ignorable="d"
             d:DesignHeight="16" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal">
        <Grid Name="leftGrid" />
        <TextBlock Text="&lt;-" Margin="5,0" Foreground="OrangeRed" />
        <Grid Name="rightGrid" />
        <TextBlock x:Name="comment" Foreground="DarkGray" />
    </StackPanel>
</UserControl>