<UserControl x:Class="ilaGUI.Editor.DoWhile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ilaGUI.Editor"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="repeter" TextDecorations="Underline" Foreground="White" />
        <StackPanel Orientation="Horizontal" Name="loopGrid">
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,5,0" Background="White" />
            <Grid Name="instructGrid" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Name="forGrid">
            <TextBlock Text="jusqua" TextDecorations="Underline" Margin="0,0,10,0" Foreground="White" />
            <Grid Name="condGrid" Margin="0,0,10,0" />
        </StackPanel>
    </StackPanel>
</UserControl>