<UserControl x:Class="ilaGUI.Editor.Assign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ilaGUI.Editor"
             mc:Ignorable="d"
             AllowDrop="True"
             d:DesignHeight="16" d:DesignWidth="100" MouseMove="UserControl_MouseMove" DragEnter="UserControl_DragEnter" DragLeave="UserControl_DragLeave" DragOver="UserControl_DragOver" Drop="UserControl_Drop" Background="#01000000">
    <Grid>
        <Separator Visibility="Collapsed" Background="OrangeRed" Name="insertHere" Margin="0" VerticalAlignment="Top" />
        <StackPanel Orientation="Horizontal">
            <Image Margin="0,0,5,0" x:Name="icon" Stretch="None" Source="/ilaGUI;component/icons/png/assign.png" />
            <Grid Name="leftGrid" />
            <TextBlock Text="&lt;-" FontFamily="Consolas" Margin="5,0" Foreground="OrangeRed" />
            <Grid Name="rightGrid" />
            <TextBlock Margin="5,0,0,0" x:Name="comment" FontStyle="Italic" Foreground="DarkGray" FontFamily="Consolas" />
        </StackPanel>
    </Grid>
</UserControl>