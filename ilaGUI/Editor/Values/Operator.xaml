<UserControl x:Class="ilaGUI.Editor.Operator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ilaGUI.Editor"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="(" Foreground="OrangeRed" FontFamily="Consolas" />
        <ContentControl x:Name="leftOperand" />
        <TextBlock x:Name="operatorType" Foreground="OrangeRed" FontFamily="Consolas" />
        <ContentControl x:Name="rightOperand" />
        <TextBlock Text=")" Foreground="OrangeRed" FontFamily="Consolas" />
    </StackPanel>
</UserControl>