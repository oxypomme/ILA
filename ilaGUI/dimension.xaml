<UserControl x:Class="ilaGUI.dimension"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ilaGUI"
             mc:Ignorable="d"
             Height="20" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5,0" Text="de :" Foreground="White" VerticalAlignment="Bottom" />
            <TextBox Width="100" x:Name="minValue" Foreground="White" CaretBrush="White" Background="{x:Null}" />
            <TextBlock Margin="5,0" Text="à :" Foreground="White" VerticalAlignment="Bottom" />
            <TextBox Width="100" x:Name="maxValue" Foreground="White" CaretBrush="White" Background="{x:Null}" />
        </StackPanel>
        <Button x:Name="removeBtn" HorizontalAlignment="Right" Click="removeBtn_Click">
            <Image Stretch="None" Source="icons/png/remove.png" />
        </Button>
    </Grid>
</UserControl>